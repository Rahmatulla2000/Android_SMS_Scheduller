<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_Screen"
    android:background="#999A98"
    tools:ignore="Orientation">


    <TextView
        android:id="@id/text"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/anim"
        android:layout_marginLeft="170dp"
        android:layout_marginBottom="285dp"
        android:text="SMS Scheduler"
        android:textColor="#1B431D"
        android:textSize="35dp"
        android:textStyle="bold" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim"
        android:layout_width="match_parent"
        android:layout_height="729dp"
        android:layout_marginBottom="-552dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/animationlottie"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/anim"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="162dp"
        android:textColor="#3A178E"
        android:text="Developed By :"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/anim"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="129dp"
        android:textColor="#1C491D"
        android:text="Md.Rahmatulla"
        android:textSize="18dp" />

</RelativeLayout>